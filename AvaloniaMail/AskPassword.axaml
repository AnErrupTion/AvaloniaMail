<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="600" Height="120" MaxWidth="600" MaxHeight="120"
        CanResize="False"
        x:Class="AvaloniaMail.AskPassword"
        Title="Enter password to continue">
        <StackPanel>
                <TextBlock Name="Message" TextWrapping="Wrap" Margin="10,10,10,0">
                        Please enter the password for account {0} in order to continue.
                </TextBlock>
                <TextBox Name="Password" Watermark="Password" PasswordChar="*" Margin="10,10,10,10" />
                <Button HorizontalAlignment="Right" Margin="0,0,10,10" Click="Ok_OnClick">OK</Button>
        </StackPanel>
</Window>
