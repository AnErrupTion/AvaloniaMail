<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="600" Height="95" MaxWidth="600" MaxHeight="95"
        x:Class="AvaloniaMail.AboutBox"
        CanResize="False"
        Closing="Window_OnClosing"
        Title="About AvaloniaMail">
        <StackPanel>
                <TextBlock TextWrapping="Wrap" Margin="10,10,0,0">
                        AvaloniaMail is a simple, fast and lightweight mail client made in C# and Avalonia. Built with love by the community, for the community.
                </TextBlock>
                <Button HorizontalAlignment="Right" Margin="0,10,10,0" Click="Ok_OnClick">OK</Button>
        </StackPanel>
</Window>
