<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400" Height="210" MaxWidth="400" MaxHeight="210"
        CanResize="False"
        x:Class="AvaloniaMail.NewAccount"
        Title="Set up new account">
    <StackPanel>
        <TextBox Name="ImapAddress" Watermark="IMAP server address" Margin="5,5,5,5" />
        <TextBox Name="ImapPort" Watermark="IMAP server port" Margin="5,5,5,5" />
        <TextBox Name="Address" Watermark="Email address" Margin="5,5,5,5" />
        <TextBox Name="Password" Watermark="Password" PasswordChar="*" Margin="5,5,5,5" />
        <Button HorizontalAlignment="Right" Margin="5,5,5,5" Click="Ok_OnClick">OK</Button>
    </StackPanel>
</Window>